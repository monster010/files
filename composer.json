{
    "name": "vakata/files",
    "description": "A collection of file storage classes",
    "keywords": [
        "vakata",
        "files"
    ],
    "homepage": "https://github.com/vakata/files",
    "license": "MIT",
    "authors": [
        {
            "name": "vakata",
            "email": "github@vakata.com",
            "homepage": "http://www.vakata.com",
            "role": "Developer"
        }
    ],
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/vakata/phpdoc-md"
        }
    ],
    "require": {
        "php" : ">=5.4.0"
    },
    "require-dev": {
        "phpunit/phpunit" : "4.*",
        "codeclimate/php-test-reporter": "dev-master",
        "clean/phpdoc-md": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "vakata\\files\\": "src"
        }
    },
    "suggest": {
        "vakata/database" : "Install if you plan on using FileDatabaseStorage",
        "vakata/http" : "Install if you want to process uploads and HTTP requests",
        "psr/http-message" : "Install if you want to process uploads and HTTP requests"
    },
    "autoload-dev": {
        "psr-4": {
            "vakata\\files\\test\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "psr2": "php-cs-fixer fix ./src",
        "phpdoc": "phpdoc-md"
    }
}
